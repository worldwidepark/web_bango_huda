<div class="min-h-screen bg-gray-100 flex justify-center items-center">
  <%= form_with scope: :user, url: "/admin/user", method: :put, local: true do |form| %>
    <div class="flex items-center justify-between w-full">
      <div class="flex-grow">
        <%= form.label :store_name, 'Store Name', class: "text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :store_name, class: "text-gray-700 border rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline w-full", value: @current_user.store_name %>
      </div>
      <%= form.submit "生成", class: "ml-4 bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 mt-5" %>
    </div>
  <% end %>
  <%= button_to '戻る', user_path, method: :get, class: "ml-4 bg-gray-500 text-white font-bold py-2 px-4 rounded hover:bg-gray-700 mt-5" %>
</div>
