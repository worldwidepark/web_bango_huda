<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-sm">
    <h1 class="text-2xl font-bold mb-6 text-center">WebBangoHuda</h1>
    <% if @waiting_count.nil? %>
      <p class="text-gray-700 mb-8 text-center"><span class="text-2xl font-bold">あなたの番です！<span></p>
    <% else %>
      <p class="text-gray-700 mb-4 text-center">先に待っている方は<p></p>
      <p class="text-gray-700 mb-8 text-center">あと <span class="text-2xl font-bold"><%=@waiting_count%>組<span></p>
    <% end %>
    <div class="text-4xl text-orange-100 m-10 font-bold mb-8 rounded text-center bg-orange-800 h-32 flex items-center justify-center">
      <%=@bango_huda.bango%>番
    </div>
    <div class="text-right w-full max-w-sm px-8">
      <button id="reloadButton" class="text-white bg-blue-300 hover:bg-blue-700 font-bold py-2 px-4 rounded">
        Reload
      </button>
    </div>
  </div>
</div>


<script>
  document.getElementById('reloadButton').addEventListener('click', function() {
    window.location.reload();
  });
</script>
